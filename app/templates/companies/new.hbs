<div class="col-md-12">
  <div class="row">
    <h3>New Company</h3>
    <div class="col-md-6">
      <h6>Name</h6>
      <div class="form-group">
        {{input type="text" value=name name="name" class="form-control input-lg"}}
      </div>
    </div>
    <div class="col-md-6">
      <h6>Domain</h6>
      <div class="form-group">
        {{input type="text" value=domain name="domain" class="form-control input-lg"}}
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <br><br>
  <button type="button" class="btn btn-primary btn-lg pull-right" {{action 'create_company'}}>Create company</button>
  <div class="clearfix"></div>
  {{#link-to 'companies'}}<button class="btn btn-primary btn-lg pull-right">back</button>{{/link-to}}
</div>