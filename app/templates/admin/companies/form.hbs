<div class='wrapper wrapper-content'>
  <div class='row'>
    <div class='col-md-12'>
      <form novalidate="novalidate" class="simple_form form-horizontal" id="" action="" method="post">

        <div class="form-group string required">
          <label class="col-md-4 string required control-label" for=""><abbr title="Requerido">*</abbr> Name</label>
          <div class="col-md-8">
            {{input value=model.name id="name" class="string required form-control"}}
          </div>
        </div>

        <div class="form-group string required">
          <label class="col-md-4 string required control-label" for=""><abbr title="Requerido">*</abbr> Domain</label>
          <div class="col-md-8">
            {{input value=model.domain id="domain" class="string required form-control"}}
          </div>
        </div>

        <div class='col-md-12 text-right'>

          
          

          <{{link-to 'Back companies' 'admin.companies' class="btn btn-default"}}

          <button {{action 'save'}} id="save" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
