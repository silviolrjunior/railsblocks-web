<section>
  <div class='row'>
    <div class='col-md-12'>
      <h2>Listing Companies</h2>
      <ol class='breadcrumb'>
        <li>
          <a href='/'>Home</a>
        </li>
        <li class='active'>
          <a>Companies</a>
        </li>
      </ol>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>      
      <div class='clearfix'>
        <div class='col-lg-7'>
          <h2>
            Companies
            {{link-to 'New company' 'admin.companies.new' class="btn btn-inverse pull-right"}}
          </h2>
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Domain</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody class="companies">
              {{#each model as |company|}}
              <tr>
                <td>
                  {{#link-to 'admin.companies.company' company}}
                    {{company.name}}
                  {{/link-to}}
                </td>
                <td>

                  {{#link-to 'admin.companies.company' company}}
                    {{company.domain}}
                  {{/link-to}}
                </td>
                <td>
                  {{#link-to 'admin.companies.company' company}}
                    Show
                  {{/link-to}} 
                  {{#link-to 'admin.companies.company.edit' company}}
                    Edit
                  {{/link-to}}
                </td>
              </tr>
              {{else}}
                <tr><td>No company yet!</td></tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class='col-lg-5'>
          {{outlet}}  
        </div>
      </div>
    </div>
  </div>
</section>
