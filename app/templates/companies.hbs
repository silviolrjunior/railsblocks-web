<div class="container">
  <div class="col-md-12">
    <h6>
      Listing Companies
      {{#link-to 'companies.new'}}<button class="btn btn-primary btn-lg pull-right">New Company</button>{{/link-to}}
    </h6>
    <div class="table-responsive pull-right">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th width="50%">NAME</th>
            <th width="50%">DOMAIN</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |company|}}
            <tr>
              <td>{{company.name}}</td>
              <td>{{company.domain}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
{{outlet}}